{
  "name": "@jiksdi/jiksdi-ui",
  "version": "0.1.0",
  "description": "A typed React + Tailwind UI library (Button, Card, Badge, Typography, Modal, Form, Field)",
  "license": "MIT",
  "author": "Hardi <jiksdi12@gmail.com>",
  "types": "dist/index.d.ts",
  "main": "dist/my-ui-library.cjs.js",
  "module": "dist/my-ui-library.es.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/my-ui-library.es.js",
      "require": "./dist/my-ui-library.cjs.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": ["dist"],
  "sideEffects": ["**/*.css"],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build && cp src/styles.css dist/styles.css",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run build",
    "lint": "npx eslint \"src/**/*.{js,ts,tsx}\"",
    "format": "npx prettier --write \"src/**/*.{js,ts,tsx,json,css,md}\""
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=3.0.0",
    "postcss": ">=8.0.0",
    "autoprefixer": ">=10.0.0",
    "clsx": ">=2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.25",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.56.0",
    "prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0"
  }
}